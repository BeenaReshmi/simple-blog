

<div class="row">
	<div class=col-md-3>
		<%= link_to 'Back', posts_path,class: 'btn btn-secondary' %>
		<div class='card'>
			<div class='card-body'>
		       <h4 class="card-title">Editing Post</h4>
		       <%= render 'form', post: @post %>
	        </div>
	    </div>
	</div>
	<div class='col-md-9'>
	 <div class='mb-3' %>
		
		<%= form_with(model: [@post, @element]) do |form| %>
		  <%= form.hidden_field :element_type, value: 'image' %>
		  <%= form.submit  'Image', class: 'btn btn-primary' %>
		<% end %>
	</div>
	<div class='card'>
		<div class='card-body pt-5'>

	<% @post.elements.each do |element| %>
		<% if element.persisted? %>
		 <% if element.image? %>
		  <% if element.image.present? %>
		    <%= image_tag(element.image) %>
		    <%= link_to 'Delete', post_element_path(@post, element),method: :delete,class: 'btn btn-danger mt-2',data: {confirm: 'Are You sure ?'} %>
		    <% else %>

		    
		    <%= form_with(model: [@post, element]) do |form| %>
			  <%= form.file_field :image %>
			  <div class='mt-3'>
			  <%= form.submit  'Save', class: 'btn btn-primary mt-3' %>
			</div>
		    <% end %>
		    <% end %>
		    <% else %>
		    
		    <% end %>
        <% end %>

	<% end %>
</div>
</div>


